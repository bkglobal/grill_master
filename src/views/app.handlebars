<div class="container">
    {{#unless error}}
        {{#if data}}
            <div style="width: {{data.grill.width}}px; height: {{data.grill.height}}px;" class="grill-parent">
                {{#if dataToDisplay}}
                    {{#each dataToDisplay}}
                        <div style="width: {{this.width}}px; height: {{this.height}}px; top: {{this.top}}px; left: {{this.left}}px" class="grill-child" data-toggle="tooltip" data-placement="top" title="Tooltip on top">

                        </div>
                    {{/each}}
                {{/if}}
            </div>
        {{/if}}
    {{/unless}}
    {{#if error}}
    <div class="alert alert-danger alert-dismissible fade show mt-4" role="alert">
        <strong>Error!</strong> {{error.message}}
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    {{/if}}
    
    <div class="row">
        <div class="col-md-8 col-sm-12">
            <form action="/saveGrill" method="post">
                <textarea rows="15" name="data" class="form-control" id="validationTextarea"
                    placeholder="Enter Schema here" required>{{data_string}}</textarea>
                <button type="submit" class="btn btn-secondary mt-2">Submit</button>
            </form>
        </div>
        <div class="col-md-4 col-sm-12">
            <ul class="list-group">
                <li class="list-group-item list-group-item-dark" aria-disabled="true">Items out of grill</li>
                {{#each remaining_data}}
                    <li class="list-group-item">{{this.title}}</li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>